{
  "title": "Co-found Realtime Dashboard",
  "uid": "cofound-realtime",
  "schemaVersion": 32,
  "version": 1,
  "panels": [
    {
      "id": 1,
      "title": "Messages Sent (rate)",
      "type": "timeseries",
      "gridPos": { "x": 0, "y": 0, "w": 12, "h": 6 },
      "targets": [
        { "expr": "rate(cofound_messages_sent_total[1m])", "legendFormat": "messages/s", "refId": "A" }
      ]
    },
    {
      "id": 2,
      "title": "Messages Read (rate)",
      "type": "timeseries",
      "gridPos": { "x": 12, "y": 0, "w": 12, "h": 6 },
      "targets": [
        { "expr": "rate(cofound_messages_read_total[1m])", "legendFormat": "reads/s", "refId": "A" }
      ]
    },
    {
      "id": 3,
      "title": "Rate Limit Rejections (rate)",
      "type": "timeseries",
      "gridPos": { "x": 0, "y": 6, "w": 12, "h": 6 },
      "targets": [
        { "expr": "rate(cofound_rate_limit_rejections_total[1m])", "legendFormat": "rejections/s", "refId": "A" }
      ]
    },
    {
      "id": 4,
      "title": "Socket Connections",
      "type": "stat",
      "gridPos": { "x": 12, "y": 6, "w": 6, "h": 6 },
      "targets": [
        { "expr": "cofound_socket_connections", "refId": "A" }
      ]
    },
    {
      "id": 5,
      "title": "Socket Typing Events (rate)",
      "type": "timeseries",
      "gridPos": { "x": 18, "y": 6, "w": 6, "h": 6 },
      "targets": [
        { "expr": "rate(cofound_socket_typing_total[1m])", "legendFormat": "typing/s", "refId": "A" }
      ]
    },
    {
      "id": 6,
      "title": "Delivered Acks (rate)",
      "type": "timeseries",
      "gridPos": { "x": 0, "y": 12, "w": 12, "h": 6 },
      "targets": [
        { "expr": "rate(cofound_socket_delivered_total[1m])", "legendFormat": "delivered/s", "refId": "A" }
      ]
    }
  ],
  "time": { "from": "now-1h", "to": "now" },
  "timepicker": { "refresh_intervals": ["5s", "10s", "30s", "1m", "5m"], "time_options": ["5m", "15m", "1h", "6h", "12h", "24h", "2d", "7d", "30d"] }
}
