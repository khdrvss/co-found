# Production Environment Configuration for co-found.uz

# Database Configuration (Production)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=cofound_prod
DB_USER=postgres
DB_PASSWORD=CHANGE_THIS_IN_PRODUCTION
DATABASE_URL=postgresql://postgres:CHANGE_THIS_IN_PRODUCTION@localhost:5432/cofound_prod

# Server Configuration
PORT=4000
NODE_ENV=production
HOST=0.0.0.0

# JWT Configuration
JWT_SECRET=CHANGE_THIS_STRONG_SECRET_IN_PRODUCTION
JWT_EXPIRES_IN=7d

# Google OAuth Configuration
VITE_GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_ID=

# Production URLs
VITE_API_URL=https://api.co-found.uz/api
VITE_FRONTEND_URL=https://co-found.uz
PRODUCTION_API_URL=https://api.co-found.uz/api
PRODUCTION_FRONTEND_URL=https://co-found.uz

# Security Configuration
ALLOWED_ORIGINS=https://co-found.uz,https://www.co-found.uz,https://api.co-found.uz
ENABLE_RATE_LIMIT=true
ENABLE_CSRF=true

# Feature Flags
ENABLE_GOOGLE_AUTH=true
ENABLE_EMAIL_VERIFICATION=false
ENABLE_2FA=false

# Redis Configuration (Production)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_URL=redis://localhost:6379

# Monitoring (Optional)
SENTRY_DSN=
SENTRY_TRACES_SAMPLE_RATE=0.1

# Docker/Production Database
POSTGRES_USER=postgres
POSTGRES_PASSWORD=CHANGE_THIS_IN_PRODUCTION
POSTGRES_DB=cofound_prod
