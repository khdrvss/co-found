# Database Configuration
DB_HOST=localhost
DB_PORT=5433
DB_NAME=cofound_local
DB_USER=postgres
DB_PASSWORD=postgres
DATABASE_URL=postgresql://postgres:postgres@localhost:5433/cofound_local

# Server Configuration
PORT=4000
NODE_ENV=development

# JWT Configuration
JWT_SECRET=your-secret-key-change-in-production
JWT_EXPIRES_IN=7d

# Google OAuth Configuration
VITE_GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_ID=

# API URLs (for production deployments)
VITE_API_URL=https://api.co-found.uz/api
VITE_FRONTEND_URL=https://co-found.uz

# Production URLs
PRODUCTION_API_URL=https://api.co-found.uz/api
PRODUCTION_FRONTEND_URL=https://co-found.uz

# Security Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001,https://co-found.uz,https://www.co-found.uz,https://api.co-found.uz
ENABLE_RATE_LIMIT=true
ENABLE_CSRF=true

# Feature Flags
ENABLE_GOOGLE_AUTH=true
ENABLE_EMAIL_VERIFICATION=false
ENABLE_2FA=false

# Redis Configuration
REDIS_PORT=6380
REDIS_URL=redis://localhost:6380

# Docker/Production Database
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=cofound_prod
